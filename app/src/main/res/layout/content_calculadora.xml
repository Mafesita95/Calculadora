<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_calculadora"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.maya.calculadora.calculadora"
    tools:showIn="@layout/activity_calculadora">


    <Button
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/btnClear"
        android:background="#18FFFF"
        android:layout_below="@+id/Proceso" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIgual"
        android:textSize="23dp"
        android:textColor="#FFFFFF"
        android:background="#9E9E9E"
        android:layout_below="@+id/btnDivision"
        android:layout_alignStart="@+id/btnDivision" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        android:textSize="23dp"
        android:textColor="#FFFFFF"
        android:background="#9E9E9E"
        android:layout_below="@+id/btnIgual"
        android:layout_alignStart="@+id/btnIgual"
        android:layout_alignBottom="@+id/button4" />

    <EditText
        android:id="@+id/Proceso"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textSize="28dp"
        android:foregroundGravity=""


        android:layout_marginBottom="103dp"
        android:layout_above="@+id/btn7"
        android:layout_alignParentStart="true" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnResta"
        android:textSize="23dp"
        android:textColor="#FFFFFF"
        android:background="#9E9E9E"
        android:layout_below="@+id/btnSuma"
        android:layout_alignStart="@+id/btnSuma" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMulti"
        android:textColor="#FFFFFF"
        android:background="#9E9E9E"
        android:textSize="23dp"
        android:layout_below="@+id/btnResta"
        android:layout_alignStart="@+id/btnResta" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDivision"
        android:textSize="23dp"
        android:layout_below="@+id/btnMulti"
        android:textColor="#FFFFFF"
        android:background="#9E9E9E"
        android:layout_alignStart="@+id/btnMulti" />

    <Button
        android:text="7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btn7"
        android:textSize="21dp"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_alignParentStart="true" />

    <Button
        android:text="8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btn8"
        android:textSize="21dp"
        android:layout_alignBottom="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_below="@+id/Proceso" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSuma"
        android:textSize="23dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/Proceso"
        android:textColor="#FFFFFF"
        android:background="#9E9E9E"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btn9"
        android:textSize="21dp"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_below="@+id/Proceso"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:text="6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btn6"
        android:textSize="21dp"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_toEndOf="@+id/btn8"
        android:layout_above="@+id/btn1" />

    <Button
        android:text="5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btn5"
        android:textSize="21dp"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_toEndOf="@+id/btn4"
        android:layout_alignTop="@+id/btn6"
        android:layout_above="@+id/btnDivision" />

    <Button
        android:text="4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btn4"
        android:textSize="21dp"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn5"
        android:layout_above="@+id/btnDivision" />

    <Button
        android:text="1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btn1"
        android:textSize="21dp"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignBottom="@+id/btn2" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignEnd="@+id/btn3"
        android:layout_toEndOf="@+id/btn2"
        android:layout_alignBottom="@+id/button3" />

    <Button
        android:text="0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btn0"
        android:textSize="21dp"
        android:textColor="#FFFFFF"
        android:background="#424242"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/btn3"
        android:layout_alignBottom="@+id/btn0"
        android:layout_alignEnd="@+id/btn2"
        android:layout_toEndOf="@+id/btn1"
        android:textColor="#FFFFFF"
        android:background="#424242"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignEnd="@+id/btn3"
        android:layout_toEndOf="@+id/btn2"
        android:layout_alignBottom="@+id/btn2"
        android:textColor="#FFFFFF"
        android:background="#424242"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_below="@+id/btnDivision"
        android:layout_alignEnd="@+id/btn3"
        android:layout_toEndOf="@+id/btn2"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_alignBottom="@+id/button5" />

    <Button
        android:text="3"
        android:layout_width= "80dp"
        android:layout_height="80dp"
        android:id="@+id/btn3"
        android:textSize="21dp"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_alignBottom="@+id/btnDivision"
        android:layout_toEndOf="@+id/btn5"
        android:layout_below="@+id/btnMulti" />

    <Button
        android:text="2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btn2"
        android:textSize="21dp"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_alignBottom="@+id/btn3"
        android:layout_toEndOf="@+id/btn1"
        android:layout_below="@+id/btnMulti" />

    <Button
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:id="@+id/buttond"
        android:layout_alignBottom="@+id/btnClear"
        android:background="#18FFFF"
        android:layout_below="@+id/Proceso" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/buttona"
        android:background="#18FFFF"
        android:layout_toEndOf="@+id/btnIgual"
        android:layout_alignBottom="@+id/btnClear"
        android:layout_below="@+id/Proceso" />


</RelativeLayout>
